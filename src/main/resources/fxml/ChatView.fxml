<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="rootPaneChat" prefHeight="586.0" prefWidth="646.0" styleClass="loader" stylesheets="@../css/SignInStyle.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ChatView">
    <children>
        <AnchorPane fx:id="chatWrite" layoutX="25.0" layoutY="541.0" prefHeight="45.0" prefWidth="450.0">
            <children>
                <Button fx:id="sendButton" layoutX="375.0" layoutY="8.0" mnemonicParsing="false" onAction="#sendMessage" prefHeight="30.0" prefWidth="75.0" text="Send" />
                <TextField fx:id="writeField" layoutY="8.0" prefHeight="30.0" prefWidth="375.0" />
            </children>
        </AnchorPane>
        <AnchorPane fx:id="chatPane" layoutX="25.0" layoutY="14.0" prefHeight="525.0" prefWidth="450.0">
            <children>
                <ListView id="chatBox" fx:id="chatBox" prefHeight="525.0" prefWidth="450.0" styleClass="loader" stylesheets="@../css/SignInStyle.css" />
            </children>
        </AnchorPane>
        <Button fx:id="startGame" layoutX="476.0" layoutY="122.0" mnemonicParsing="false" onAction="#startGame" prefHeight="65.0" prefWidth="172.0" style="-fx-background-color: green;" text="Start game.Game" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
        <Button fx:id="exitGame" layoutX="476.0" layoutY="196.0" mnemonicParsing="false" onAction="#exitGame" prefHeight="45.0" prefWidth="172.0" style="-fx-background-color: red;" text="Exit" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
        <Button fx:id="joinGame" layoutX="476.0" layoutY="68.0" mnemonicParsing="false" onAction="#joinGame" prefHeight="45.0" prefWidth="172.0" text="Join game.Game" />
        <Button fx:id="createRoomGame" layoutX="476.0" layoutY="14.0" mnemonicParsing="false" onAction="#chooseRoboter" prefHeight="45.0" prefWidth="172.0" style="-fx-background-color: white; -fx-border-color: black; -fx-border-radius: 10;" text="Create game.Game">
            <font>
                <Font name="System Bold" size="19.0" />
            </font>
        </Button>
      <ImageView fitHeight="337.0" fitWidth="172.0" layoutX="476.0" layoutY="248.0" pickOnBounds="true">
         <image>
            <Image url="@../assets/ChatViewPic.png" />
         </image>
      </ImageView>
    </children>
</AnchorPane>
